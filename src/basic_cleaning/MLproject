name: basic_cleaning
conda_env: conda.yml

entry_points:
  main:
    parameters:

      input_artifact:
        description: Input artifact with raw data
        type: string

      output_artifact:
        description: Output artifact with clean data
        type: string

      output_type:
        description: Type of output data artifact
        type: string

      output_description:
        description: Description of the output artifact
        type: string

      min_price:
        description: Minimum room/apartment price
        type: float

      max_price:
        description: Maximum room/apartment price
        type: float


    command: >-
        python run.py  --input_artifact {input_artifact} \
                       --output_artifact {output_artifact} \
                       --output_type {output_type} \
                       --output_description {output_description} \
                       --min_price {min_price} \
                       --max_price {max_price}
